@model IEnumerable<eConnect.DataAccess.tblDepositRequest>

@{ ViewBag.Title = "Deposit Request";
    Layout = "~/Views/Shared/_LayoutMain.cshtml"; }

<section class="section">
    @*<h2></h2>*@

    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        @Html.ActionLink("Create New", "Create", "Menu", new { @class = "btn btn-primary px-4" })
    </p>

    @using (@Html.BeginForm("IndexSearch", "DepositRequest", FormMethod.Get))
    {@Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h4><span class="toggle-collapse" id="toggle" data-toggle="collapse" href="#filter" role="button" aria-expanded="true" aria-controls="filter"></span> Filter</h4>
        </div>
        <div class="card-body collapse show" id="filter">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Request Id</label>
                        <input type="text" id="Requestid" name="Requestid" class="form-control" value="@Request["Requestid"]">
                    </div>
                </div>
                @*<div class="col-md-3">
                    <div class="form-group">
                        <label>Request Type</label>
                        @Html.DropDownList("RequestType", (IEnumerable<SelectListItem>)ViewBag.RequestType, new { @class = "form-control" })
                    </div>
                </div>*@
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Requested Date</label>
                        <input type="date" id="Requesteddte" name="Requesteddte" class="form-control" value="@Request["Requesteddte"]">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Completion Date</label>
                        <input type="date" id="Completiondte" name="Completiondte" class="form-control" value="@Request["Completiondte"]">

                    </div>
                </div>


                <div class="col-md-3 mt-md-4 pt-1">
                    @*<button class="btn btn-dark px-4 mr-2">Cancel</button>*@
                    <button type="submit" class="btn btn-primary px-4">Search</button>
                </div>

            </div>
        </div>
    </div>}
    <div class="card">

        <div class="card-body">


            <div class="table-responsive">
                <div class="table-actions">
                    @*<a href="#" data-toggle="tooltip" title="Download Excel"><i class="mdi mdi-file-excel mdi-24px"></i></a>*@
                </div>
                <table class="table table-striped" id="table-2">
                    <thead>
                        <tr>
                            <!--<th>
                                RequestedID-->
                                @*@Html.DisplayNameFor(model => model.RequestId)*@
                            <!--</th>-->
                            <th>
                                RequestedType
                                @*@Html.DisplayNameFor(model => model.RequestId)*@
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RequestedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CompletionDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.DepositeRequestId)
                            </td>*@

                            @if (item.RequestType.Equals(1))
                            {
                                <td>Withdrawal</td>

                            }
                            else
                            {
                                <td>Deposit</td>
                            }
                            @*@Html.DisplayFor(modelItem => item.RequestType)*@

                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @*@Html.Label(@item.RequestedDate.Value.ToString("dd MMM yyyy"))*@

                                @Html.DisplayFor(modelItem => item.RequestedDate)
                            </td>
                            <td>

                                @if (item.CompletionDate != null)
                                {
                                    @*@Html.Label(@item.CompletionDate.Value.ToString("dd MMM yyyy"))*@

                                    @Html.DisplayFor(modelItem => item.CompletionDate)
                                }
                                @*@Html.DisplayFor(modelItem => item.CompletionDate)*@
                            </td>
                            @if (item.Status.Equals(1))
                            {
                                <td>Open</td>

                            }
                            else if (item.Status.Equals(3))
                            {
                                <td>Close</td>
                            }
                            else if (item.Status.Equals(7))
                            {
                             <td>Rejected</td>
                            }
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.DepositeRequestId }) |*@
                                @Html.ActionLink("Details", "Details", new { id = item.DepositeRequestId }) @*|
            @Html.ActionLink("Delete", "Delete", new { id = item.DepositeRequestId })*@
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</section>

