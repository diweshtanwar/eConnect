
@model eConnect.Model.Withdraw

@{ ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml"; }



@using (Html.BeginForm("Create", "WithdrawRequest", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <section class="section">
        <div class="card">
            <div class="card-body">
                @*<h6 class="text-primary mb-3"> Personal Details</h6>*@
                <div class="row">

                    @*<div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.RequestType, htmlAttributes: new { @class = "required-field" })
                                @Html.DropDownList("RequestType", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RequestType, "", new { @class = "text-danger" })
                            </div>
                        </div>*@

                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "required-field" })
                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*<div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "required-field" })
                                @Html.DropDownList("Status", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                    @*<div class="row">*@
                    <div class="col-md-4">
                        <div class="form-group">
                            Account Detail
                            @*@Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "" })*@
                            @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*</div>*@
                    <div class="col-md-4">
                        <div class="my-4 text-right">

                            <button class="btn btn-primary px-4" type="submit">Save</button>
                            |
                            @Html.ActionLink("Cancel", "Index", "Menu", new { @class = "btn btn-dark px-4 mr-2" })
                        </div>

                    </div>

                </div>

                <div>
                    <center>
                        <span style="text-decoration: blink; ">
                            @{ Html.RenderAction("_GetActiveWindow", "Partial"); }
                        </span>
                    </center>
                </div>
                <div>
                    <center>
                        <span style="color: blue;text-decoration: blink; ">
                            @TempData["TimingWindowMessage"]


                        </span>
                    </center>
                </div>

            </div>
        </div>
    </section>}
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        $(function () {
            alert("@TempData["Message"]")
        });
    </script>
}
@if (TempData["TimingWindowMessage"] != null)
{
    <script type="text/javascript">
        $(function () {
            alert("@TempData["TimingWindowMessage"]")
        });
    </script>
}

