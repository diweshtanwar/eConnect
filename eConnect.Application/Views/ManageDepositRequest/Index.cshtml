    function ClickSave(id) {
        var txtclear = "text" + id;
        var textareaval = document.getElementById(txtclear).value;
        if (textareaval == '') {
            alert('Please enter rejection comment.')
        }
        else {
            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateRequestStatus","ManageDepositRequest")',
                data: { RequestId: id, status: '7', Comments: textareaval, RequestType: '1' },
                dataType: 'html',
                beforeSend: function () {
                    $('.ajax-loader').css("visibility", "visible");
                },
                complete: function () {
                    $('.ajax-loader').css("visibility", "hidden");
                },
                success: function (data) {
                    location.reload(true);
                    alert('Record Updated successfully');
                }

            });
    }
    }
     function ClickSaveStatus(id) {
         var txtclear = "text" + id;
         var drpId = "drpStatus" + id;
         var drpStatus = document.getElementById(drpId).value;

            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateRequestStatus","ManageDepositRequest")',
                data: { RequestId: id, status: drpStatus, Comments: "", RequestType: '1' },
                dataType: 'html',
                beforeSend: function () {
                    $('.ajax-loader').css("visibility", "visible");
                },
                complete: function () {
                    $('.ajax-loader').css("visibility", "hidden");
                },
                success: function (data) {
                    location.reload(true);
                    alert('Record Updated successfully');
                }

            });

    }
    function showStatus(id) {
        $('#divstatus' + id).show();
    }

    function Cancel(id) {

        $('#divstatus' + id).hide();
        /*  $(document).ready(function () {*/
    }
    function showEdit(id) {
        $('#div' + id).show();
    }
    function ClickCancel(id) {
        var txtclear = "text" + id;
        document.getElementById(txtclear).value = "";
        $('#div' + id).hide();
        /*  $(document).ready(function () {*/
    }

    function bindCity() {
        var sid = $("#State").val();
        $("#City").empty();
        $.ajax({
            url: '@Url.Action("BindCity", "ManageWithdrawalRequest")',
            data: { state_id: sid },
            type: 'GET',
            success: function (data)
            {
                var v = "<option>---Select---</option>";
                $.each(data, function (i, v1) {
                    v += "<option value=" + v1.Value + ">" + v1.Text + "</option>";
                });
                $("#City").html(v);
            }
        });
    }

    
